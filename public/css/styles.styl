@import url('https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,900');
@import url('https://fonts.googleapis.com/css?family=Pacifico');
@import "_lib/normalize"

* {
  outline: none;
  color: #fff;
}

html {
  font-size: 100%;
  margin: 0;
  padding: 0;
}
body {
  font-size: 14px;
  font-family: 'Source Sans Pro', sans-serif;
  line-height: 1.5em;
  font-weight: 400;
  padding: 20px;
  background-color: #4bbcab;
  color: #fff;
  text-align: center;
}

h1, h2, h3, h4, h5, h6 {
  padding: 0;
  margin: 0;
}

h1 {
  font-size: 4em;
}

h2 {
  font-size: 3em;
}

h3 {
  font-size: 2em;
}

h4 {
  font-size: 1.5em;
}

h5 {
  font-size: 1.3em;
}

h6 {
  font-size: 1em;
}

.bold {
  font-family: 'Source Sans Pro', sans-serif;
  font-weight: 900;
  color: #f6e420;
  text-transform: uppercase;
}

.bold-black {
  @extend .bold;
  color: #000;
}

.fancy {
  font-family: 'Pacifico', cursive;
}

section.header {
  text-align: center;
  padding: 0px 0px 40px 0px;
  border-bottom: solid 1px rgba(0, 0, 0, 0.1);
}

section.tutorial {
  max-width: 600px;
  margin: 0 auto;
  margin-top: 20px;
}

div.link {
  display: block;
  font-family: 'Source Sans Pro', sans-serif;
  font-weight: 600;
  letter-spacing: 0.04em;
  padding: 10px 20px 10px 20px;
  background-color: #3da394;
  color: #76d3c5;
  margin: 0px 10px 10px 10px;
  text-align: left;
}

img.full {
  width: 100%;
  max-width: 600px;
}

img.thumb {
  width: 100%;
  max-width: 200px;
}

img {
  text-align: center;
  padding: 10px;
  max-width: 600px;
}

div.link a {
  color: #76d3c5;
  text-align: left;
}

.size {
  color: #76d3c5;
  float: right;
  // font-size: 1.2em;
  text-align: right;
  font-weight: 900;
}


@media all and (max-width:500px) {
  * {
    text-align: center;
  }

  div.link, div.link a {
    text-align: center;
  }

  .size {
    display: block;
    float: none;
    padding-top: 5px;
    text-align: center;
  }

}