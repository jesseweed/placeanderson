@import url('http://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,900'g);

@import url(http://fonts.googleapis.com/css?family=Pacifico);

* {
  outline: none;
  color: #fff;
}



html {
  font-size: 100%;
  margin: 0;
  padding: 0;
}
body {
  font-size: 14px;
  font-family: 'Source Sans Pro', sans-serif;
  line-height: 1.5em;
  font-weight: 400;
  padding: 20px;
  background-color: #4bbcab;
  color: #fff;
  text-align: center;
}

.bold {
  font-family: 'Source Sans Pro', sans-serif;
  font-weight: 900;
  color: #f6e420;
  text-transform: uppercase;
}

.bold-black {
  @extend .bold;
  color: #000;
}

.fancy {
  font-family: 'Pacifico', cursive;
}


section.header {
  text-align: center;
  padding: 0px 0px 40px 0px;
  border-bottom: solid 1px rgba(0, 0, 0, 0.1);
}

section.tutorial {
  width: 600px;
  margin: 0 auto;
  margin-top: 20px;
}

div.link {
  display: block;
  font-family: 'Source Sans Pro', sans-serif;
  font-weight: 600;
  letter-spacing: 0.04em;
  padding: 10px 20px 10px 20px;
  background-color: #3da394;
  color: #76d3c5;
  margin: 0px 10px 10px 10px;
}

img {
  text-align: center;
  padding: 10px;
}

div.link a {
  color: #76d3c5;
  text-align: left;
}

.size {
  color: #76d3c5;
  float: right;
  // font-size: 1.2em;
  text-align: right;
  font-weight: 900;
}


